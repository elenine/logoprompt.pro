---
import Layout from '../layouts/Layout.astro';

export const prerender = false;

const token = Astro.url.searchParams.get('token');
const error = Astro.url.searchParams.get('error');
---

<Layout title="Verify Email - LogoPrompt.pro" description="Verify your email address">
  <main class="auth-page">
    <div class="auth-container">
      <div class="auth-card">
        {error ? (
          <div class="result-state error">
            <div class="icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="15" y1="9" x2="9" y2="15"></line>
                <line x1="9" y1="9" x2="15" y2="15"></line>
              </svg>
            </div>
            <h1>Verification Failed</h1>
            <p>The verification link is invalid or has expired.</p>
            <a href="/login" class="submit-btn">Go to Login</a>
          </div>
        ) : !token ? (
          <div class="result-state">
            <div class="icon checking">
              <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 2a10 10 0 1 0 10 10H12V2z"></path>
              </svg>
            </div>
            <h1>Invalid Link</h1>
            <p>This verification link is invalid.</p>
            <a href="/login" class="submit-btn">Go to Login</a>
          </div>
        ) : (
          <div id="verifying" class="result-state">
            <div class="icon checking">
              <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
            </div>
            <h1>Verifying Email...</h1>
            <p>Please wait while we verify your email address.</p>
          </div>
        )}

        <div id="success" class="result-state success" style="display: none;">
          <div class="icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
              <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
          </div>
          <h1>Email Verified!</h1>
          <p>Your email has been verified successfully.</p>
          <a href="/login" class="submit-btn">Sign In</a>
        </div>

        <div id="error" class="result-state error" style="display: none;">
          <div class="icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="15" y1="9" x2="9" y2="15"></line>
              <line x1="9" y1="9" x2="15" y2="15"></line>
            </svg>
          </div>
          <h1>Verification Failed</h1>
          <p id="error-message">The verification link is invalid or has expired.</p>
          <a href="/login" class="submit-btn">Go to Login</a>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  // Auto-verify on page load if token exists
  const urlParams = new URLSearchParams(window.location.search);
  const token = urlParams.get('token');

  if (token) {
    verifyEmail(token);
  }

  async function verifyEmail(token: string) {
    try {
      // The verification happens automatically via Better Auth when the link is clicked
      // We just need to show success
      const response = await fetch(`/api/auth/verify-email?token=${token}`);

      if (response.ok) {
        document.getElementById('verifying')!.style.display = 'none';
        document.getElementById('success')!.style.display = 'block';
      } else {
        throw new Error('Verification failed');
      }
    } catch (error) {
      document.getElementById('verifying')!.style.display = 'none';
      document.getElementById('error')!.style.display = 'block';
    }
  }
</script>

<style>
  .auth-page {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
  }

  .auth-container {
    width: 100%;
    max-width: 420px;
  }

  .auth-card {
    background: rgb(var(--bg-primary));
    border: 1px solid rgb(var(--card-border));
    border-radius: var(--radius-lg);
    padding: 2.5rem;
    box-shadow: var(--shadow-lg);
  }

  .result-state {
    text-align: center;
  }

  .result-state h1 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 1rem 0 0.5rem 0;
    color: rgb(var(--text-primary));
  }

  .result-state p {
    color: rgb(var(--text-secondary));
    margin: 0 0 1.5rem 0;
  }

  .icon {
    display: flex;
    justify-content: center;
    color: rgb(var(--text-secondary));
  }

  .icon.checking {
    animation: spin 1s linear infinite;
  }

  .success .icon {
    color: #22c55e;
  }

  .error .icon {
    color: rgb(var(--accent));
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .submit-btn {
    width: 100%;
    padding: 0.875rem;
    background: rgb(var(--accent));
    color: white;
    border: none;
    border-radius: var(--radius-md);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background var(--transition-fast);
    text-decoration: none;
    text-align: center;
    display: inline-block;
  }

  .submit-btn:hover {
    background: rgb(var(--accent-hover));
  }
</style>
