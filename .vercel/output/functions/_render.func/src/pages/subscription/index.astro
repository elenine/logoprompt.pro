---
import Layout from '../../layouts/Layout.astro';
import { SUBSCRIPTION_PLAN } from '../../lib/subscription-config';

export const prerender = false;

const user = Astro.locals.user;
const subscription = Astro.locals.subscription;
const isSubscribed = Astro.locals.isSubscribed;

const error = Astro.url.searchParams.get('error');
---

<Layout title="Pro Subscription - LogoPrompt.pro" description="Subscribe to Pro for an ad-free experience">
  <main class="subscription-page">
    <div class="subscription-container">
      {error && (
        <div class="error-banner">
          {error === 'no_subscription' && 'No active subscription found.'}
          {error === 'portal_failed' && 'Failed to open subscription portal. Please try again.'}
        </div>
      )}

      {isSubscribed ? (
        <div class="subscription-card active">
          <div class="status-badge">Active</div>
          <h1>You're a Pro Member!</h1>
          <p class="subtitle">Thank you for supporting LogoPrompt.pro</p>

          <div class="subscription-details">
            <div class="detail-row">
              <span class="label">Status</span>
              <span class="value status-active">{subscription?.status}</span>
            </div>
            {subscription?.currentPeriodEnd && (
              <div class="detail-row">
                <span class="label">
                  {subscription.cancelAtPeriodEnd ? 'Expires on' : 'Renews on'}
                </span>
                <span class="value">
                  {new Date(subscription.currentPeriodEnd).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </span>
              </div>
            )}
            {subscription?.cancelAtPeriodEnd && (
              <div class="cancel-notice">
                Your subscription will not renew after the current period.
              </div>
            )}
          </div>

          <div class="benefits">
            <h3>Your Benefits</h3>
            <ul>
              {SUBSCRIPTION_PLAN.features.map((feature) => (
                <li>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>

          <a href="/api/polar/portal" class="manage-btn">
            Manage Subscription
          </a>
        </div>
      ) : (
        <div class="subscription-card">
          <div class="plan-badge">Pro</div>
          <h1>{SUBSCRIPTION_PLAN.name}</h1>
          <p class="subtitle">{SUBSCRIPTION_PLAN.description}</p>

          <div class="price">
            <span class="amount">${SUBSCRIPTION_PLAN.price.monthly}</span>
            <span class="period">/month</span>
          </div>

          <div class="features">
            <h3>What you get</h3>
            <ul>
              {SUBSCRIPTION_PLAN.features.map((feature) => (
                <li>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>

          {user ? (
            <button id="subscribe-btn" class="subscribe-btn" type="button">
              <span class="btn-text">Subscribe Now</span>
              <span class="btn-loading" style="display: none;">Processing...</span>
            </button>
          ) : (
            <a href="/login?redirect=/subscription" class="subscribe-btn">
              Sign in to Subscribe
            </a>
          )}

          <div id="checkout-error" class="checkout-error" style="display: none;"></div>

          <p class="terms-notice">
            By subscribing, you agree to our
            <a href="/terms">Terms of Service</a>.
            Cancel anytime.
          </p>
        </div>
      )}

      <a href="/" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Back to Gallery
      </a>
    </div>
  </main>
</Layout>

<script>
  document.getElementById('subscribe-btn')?.addEventListener('click', async () => {
    const button = document.getElementById('subscribe-btn') as HTMLButtonElement;
    const btnText = button.querySelector('.btn-text') as HTMLElement;
    const btnLoading = button.querySelector('.btn-loading') as HTMLElement;
    const errorDiv = document.getElementById('checkout-error') as HTMLElement;

    button.disabled = true;
    btnText.style.display = 'none';
    btnLoading.style.display = 'inline';
    errorDiv.style.display = 'none';

    try {
      const response = await fetch('/api/polar/checkout', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || 'Failed to create checkout');
      }

      // Redirect to Polar checkout
      window.location.href = data.checkoutUrl;
    } catch (error: any) {
      errorDiv.textContent = error.message || 'Something went wrong. Please try again.';
      errorDiv.style.display = 'block';
      button.disabled = false;
      btnText.style.display = 'inline';
      btnLoading.style.display = 'none';
    }
  });
</script>

<style>
  .subscription-page {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
  }

  .subscription-container {
    width: 100%;
    max-width: 480px;
  }

  .error-banner {
    background: rgba(220, 38, 38, 0.1);
    color: rgb(var(--accent));
    padding: 0.75rem 1rem;
    border-radius: var(--radius-md);
    margin-bottom: 1rem;
    text-align: center;
    font-size: 0.875rem;
  }

  .subscription-card {
    background: rgb(var(--bg-primary));
    border: 1px solid rgb(var(--card-border));
    border-radius: var(--radius-lg);
    padding: 2.5rem;
    box-shadow: var(--shadow-lg);
    text-align: center;
    position: relative;
  }

  .subscription-card.active {
    border-color: rgb(var(--accent));
    border-width: 2px;
  }

  .plan-badge,
  .status-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: rgb(var(--accent));
    color: white;
    padding: 0.25rem 1rem;
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .status-badge {
    background: #22c55e;
  }

  h1 {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0.5rem 0;
    color: rgb(var(--text-primary));
  }

  .subtitle {
    color: rgb(var(--text-secondary));
    margin: 0 0 1.5rem;
    font-size: 0.95rem;
  }

  .price {
    margin: 1.5rem 0;
  }

  .amount {
    font-size: 3rem;
    font-weight: 800;
    color: rgb(var(--text-primary));
  }

  .period {
    font-size: 1rem;
    color: rgb(var(--text-tertiary));
  }

  .features,
  .benefits {
    text-align: left;
    margin: 1.5rem 0;
  }

  .features h3,
  .benefits h3 {
    font-size: 0.875rem;
    font-weight: 600;
    color: rgb(var(--text-tertiary));
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 0.75rem;
  }

  .features ul,
  .benefits ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .features li,
  .benefits li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0;
    color: rgb(var(--text-primary));
    font-size: 0.95rem;
  }

  .features li svg,
  .benefits li svg {
    color: #22c55e;
    flex-shrink: 0;
  }

  .subscription-details {
    background: rgb(var(--bg-secondary));
    border-radius: var(--radius-md);
    padding: 1rem;
    margin: 1.5rem 0;
    text-align: left;
  }

  .detail-row {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem 0;
  }

  .detail-row:not(:last-child) {
    border-bottom: 1px solid rgb(var(--card-border));
  }

  .detail-row .label {
    color: rgb(var(--text-tertiary));
    font-size: 0.875rem;
  }

  .detail-row .value {
    font-weight: 500;
    color: rgb(var(--text-primary));
  }

  .status-active {
    color: #22c55e;
    text-transform: capitalize;
  }

  .cancel-notice {
    background: rgba(251, 191, 36, 0.15);
    color: #b45309;
    padding: 0.5rem 0.75rem;
    border-radius: var(--radius-sm);
    font-size: 0.8rem;
    margin-top: 0.5rem;
  }

  .subscribe-btn,
  .manage-btn {
    width: 100%;
    padding: 1rem;
    background: rgb(var(--accent));
    color: white;
    border: none;
    border-radius: var(--radius-md);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background var(--transition-fast);
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  .subscribe-btn:hover:not(:disabled),
  .manage-btn:hover {
    background: rgb(var(--accent-hover));
  }

  .subscribe-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .manage-btn {
    background: rgb(var(--bg-secondary));
    color: rgb(var(--text-primary));
    border: 1px solid rgb(var(--card-border));
  }

  .manage-btn:hover {
    background: rgb(var(--bg-tertiary));
    border-color: rgb(var(--card-hover-border));
  }

  .checkout-error {
    background: rgba(220, 38, 38, 0.1);
    color: rgb(var(--accent));
    padding: 0.75rem 1rem;
    border-radius: var(--radius-sm);
    font-size: 0.875rem;
    margin-top: 1rem;
  }

  .terms-notice {
    margin-top: 1rem;
    font-size: 0.8rem;
    color: rgb(var(--text-tertiary));
  }

  .terms-notice a {
    color: rgb(var(--accent));
    text-decoration: none;
  }

  .terms-notice a:hover {
    text-decoration: underline;
  }

  .back-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 1.5rem;
    color: rgb(var(--text-secondary));
    text-decoration: none;
    font-size: 0.875rem;
  }

  .back-link:hover {
    color: rgb(var(--accent));
  }
</style>
