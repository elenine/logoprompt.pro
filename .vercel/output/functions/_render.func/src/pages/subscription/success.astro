---
import Layout from '../../layouts/Layout.astro';

export const prerender = false;

const user = Astro.locals.user;
const checkoutId = Astro.url.searchParams.get('checkout_id');

if (!user) {
  return Astro.redirect('/login');
}

if (!checkoutId) {
  return Astro.redirect('/subscription');
}
---

<Layout title="Subscription Activated - LogoPrompt.pro" description="Your Pro subscription is now active">
  <main class="success-page">
    <div class="success-container">
      <div class="success-card">
        <div class="success-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
          </svg>
        </div>

        <h1>Welcome to Pro!</h1>
        <p class="subtitle">Your subscription has been activated successfully.</p>

        <div class="benefits">
          <p>You now have access to:</p>
          <ul>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              Ad-free browsing experience
            </li>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              Priority access to new features
            </li>
          </ul>
        </div>

        <div class="actions">
          <a href="/" class="primary-btn">Browse Gallery</a>
          <a href="/subscription" class="secondary-btn">Manage Subscription</a>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .success-page {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
  }

  .success-container {
    width: 100%;
    max-width: 480px;
  }

  .success-card {
    background: rgb(var(--bg-primary));
    border: 2px solid #22c55e;
    border-radius: var(--radius-lg);
    padding: 2.5rem;
    box-shadow: var(--shadow-lg);
    text-align: center;
  }

  .success-icon {
    color: #22c55e;
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0 0 0.5rem;
    color: rgb(var(--text-primary));
  }

  .subtitle {
    color: rgb(var(--text-secondary));
    margin: 0 0 1.5rem;
  }

  .benefits {
    background: rgb(var(--bg-secondary));
    border-radius: var(--radius-md);
    padding: 1rem 1.5rem;
    text-align: left;
    margin-bottom: 1.5rem;
  }

  .benefits p {
    font-size: 0.875rem;
    color: rgb(var(--text-tertiary));
    margin: 0 0 0.75rem;
  }

  .benefits ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .benefits li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0;
    color: rgb(var(--text-primary));
    font-size: 0.95rem;
  }

  .benefits li svg {
    color: #22c55e;
    flex-shrink: 0;
  }

  .actions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .primary-btn {
    width: 100%;
    padding: 1rem;
    background: rgb(var(--accent));
    color: white;
    border: none;
    border-radius: var(--radius-md);
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    text-align: center;
    transition: background var(--transition-fast);
  }

  .primary-btn:hover {
    background: rgb(var(--accent-hover));
  }

  .secondary-btn {
    width: 100%;
    padding: 1rem;
    background: rgb(var(--bg-secondary));
    color: rgb(var(--text-primary));
    border: 1px solid rgb(var(--card-border));
    border-radius: var(--radius-md);
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    text-align: center;
    transition: all var(--transition-fast);
  }

  .secondary-btn:hover {
    background: rgb(var(--bg-tertiary));
    border-color: rgb(var(--card-hover-border));
  }
</style>
