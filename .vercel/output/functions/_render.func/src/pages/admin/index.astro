---
import Layout from '../../layouts/Layout.astro';

export const prerender = false;

// Admin check is done by middleware
const user = Astro.locals.user;
if (!user || !Astro.locals.isAdmin) {
  return Astro.redirect('/');
}
---

<Layout title="Admin Dashboard - LogoPrompt.pro" description="Admin dashboard">
  <main class="admin-page">
    <div class="admin-container">
      <header class="admin-header">
        <h1>Admin Dashboard</h1>
        <p class="welcome">Welcome, {user.name}</p>
      </header>

      <div class="stats-grid" id="stats-grid">
        <div class="stat-card loading">
          <div class="stat-icon users">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </div>
          <div class="stat-content">
            <span class="stat-value" id="total-users">-</span>
            <span class="stat-label">Total Users</span>
          </div>
        </div>

        <div class="stat-card loading">
          <div class="stat-icon subscriptions">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
          </div>
          <div class="stat-content">
            <span class="stat-value" id="active-subscriptions">-</span>
            <span class="stat-label">Active Subscriptions</span>
          </div>
        </div>
      </div>

      <nav class="admin-nav">
        <a href="/admin/users" class="nav-card">
          <div class="nav-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </div>
          <h2>User Management</h2>
          <p>View all users and their subscriptions</p>
        </a>
      </nav>

      <div class="admin-footer">
        <a href="/profile" class="back-link">Back to Profile</a>
      </div>
    </div>
  </main>
</Layout>

<script>
  async function loadStats() {
    try {
      // Fetch users count
      const usersRes = await fetch('/api/admin/users?limit=1');
      if (usersRes.ok) {
        const usersData = await usersRes.json();
        document.getElementById('total-users')!.textContent = usersData.pagination.total.toString();
        document.getElementById('active-subscriptions')!.textContent = usersData.activeSubscriptions?.toString() || '0';
      }

      // Remove loading class
      document.querySelectorAll('.stat-card').forEach(card => {
        card.classList.remove('loading');
      });
    } catch (error) {
      console.error('Failed to load stats:', error);
    }
  }

  loadStats();
</script>

<style>
  .admin-page {
    min-height: calc(100vh - 200px);
    padding: 2rem 1rem;
  }

  .admin-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .admin-header {
    margin-bottom: 2rem;
  }

  .admin-header h1 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 0.5rem;
    color: rgb(var(--text-primary));
  }

  .welcome {
    color: rgb(var(--text-secondary));
    margin: 0;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .stat-card {
    background: rgb(var(--bg-primary));
    border: 1px solid rgb(var(--card-border));
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .stat-card.loading {
    opacity: 0.6;
  }

  .stat-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .stat-icon.users { background: rgba(59, 130, 246, 0.1); color: #3b82f6; }
  .stat-icon.subscriptions { background: rgba(16, 185, 129, 0.1); color: #10b981; }

  .stat-content {
    display: flex;
    flex-direction: column;
  }

  .stat-value {
    font-size: 1.75rem;
    font-weight: 700;
    color: rgb(var(--text-primary));
    line-height: 1;
  }

  .stat-label {
    font-size: 0.9rem;
    color: rgb(var(--text-secondary));
    margin-top: 0.25rem;
  }

  .admin-nav {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .nav-card {
    background: rgb(var(--bg-primary));
    border: 1px solid rgb(var(--card-border));
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .nav-card:hover {
    border-color: rgb(var(--accent));
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .nav-icon {
    width: 56px;
    height: 56px;
    background: rgba(var(--accent), 0.1);
    color: rgb(var(--accent));
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .nav-card h2 {
    font-size: 1.1rem;
    font-weight: 600;
    color: rgb(var(--text-primary));
    margin: 0 0 0.5rem;
  }

  .nav-card p {
    font-size: 0.9rem;
    color: rgb(var(--text-secondary));
    margin: 0;
  }

  .admin-footer {
    text-align: center;
  }

  .back-link {
    color: rgb(var(--accent));
    text-decoration: none;
  }

  .back-link:hover {
    text-decoration: underline;
  }
</style>
