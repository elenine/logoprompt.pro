---
interface Props {
  activeTab: 'logos' | 'products';
  logoCount: number;
  productCount: number;
}

const { activeTab, logoCount, productCount } = Astro.props;
---

<div class="gallery-tabs">
  <div class="tabs-container">
    <a
      href="/"
      class:list={["tab-btn", { active: activeTab === 'logos' }]}
      data-tab="logos"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polygon points="12 2 2 7 12 12 22 7 12 2"></polygon>
        <polyline points="2 17 12 22 22 17"></polyline>
        <polyline points="2 12 12 17 22 12"></polyline>
      </svg>
      <span class="tab-label">Logos</span>
      <span class="tab-count">{logoCount}</span>
    </a>
    <a
      href="/products"
      class:list={["tab-btn", { active: activeTab === 'products' }]}
      data-tab="products"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <path d="M16 10a4 4 0 0 1-8 0"></path>
      </svg>
      <span class="tab-label">Products</span>
      <span class="tab-count">{productCount}</span>
    </a>
  </div>
</div>

<style>
  .gallery-tabs {
    display: flex;
    justify-content: center;
    margin-bottom: 1.5rem;
  }

  .tabs-container {
    display: inline-flex;
    gap: 0.5rem;
    padding: 0.375rem;
    background: rgb(var(--bg-primary));
    border: 1px solid rgb(var(--card-border));
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
  }

  .tab-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: rgb(var(--text-secondary));
    background: transparent;
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .tab-btn svg {
    flex-shrink: 0;
    opacity: 0.7;
    transition: opacity var(--transition-fast);
  }

  .tab-btn:hover {
    color: rgb(var(--text-primary));
    background: rgb(var(--bg-tertiary));
  }

  .tab-btn:hover svg {
    opacity: 1;
  }

  .tab-btn.active {
    color: white;
    background: rgb(var(--accent));
    box-shadow: 0 2px 8px rgba(var(--accent), 0.3);
  }

  .tab-btn.active svg {
    opacity: 1;
    color: white;
  }

  .tab-label {
    white-space: nowrap;
  }

  .tab-count {
    font-size: 0.7rem;
    font-weight: 700;
    padding: 0.2rem 0.5rem;
    background: rgba(0, 0, 0, 0.08);
    border-radius: var(--radius-full);
    min-width: 1.75rem;
    text-align: center;
  }

  .tab-btn.active .tab-count {
    background: rgba(255, 255, 255, 0.25);
    color: white;
  }

  @media (max-width: 480px) {
    .tabs-container {
      width: 100%;
      padding: 0.25rem;
    }

    .tab-btn {
      flex: 1;
      justify-content: center;
      padding: 0.625rem 0.75rem;
      font-size: 0.85rem;
    }

    .tab-btn svg {
      width: 16px;
      height: 16px;
    }

    .tab-count {
      font-size: 0.65rem;
      padding: 0.15rem 0.4rem;
    }
  }
</style>
