---
interface Props {
  slot?: number;
}

const { slot = 1 } = Astro.props;
---

<div class="ad-banner" data-ad-slot={slot}>
  <div class="ad-content">
    <div class="ad-label">Advertisement</div>
    <div class="ad-placeholder">
      <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
        <circle cx="8.5" cy="8.5" r="1.5"></circle>
        <polyline points="21 15 16 10 5 21"></polyline>
      </svg>
      <span>Your Ad Here</span>
    </div>
  </div>
</div>

<style>
  .ad-banner {
    grid-column: 1 / -1;
    width: 100%;
    padding: 1rem 0;
  }

  .ad-content {
    background: linear-gradient(135deg, rgba(var(--accent-dark), 0.6), rgba(var(--accent-dark), 0.3));
    border: 1px dashed rgba(var(--accent-light), 0.3);
    border-radius: 12px;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 120px;
    position: relative;
  }

  .ad-label {
    position: absolute;
    top: 0.5rem;
    left: 0.75rem;
    font-size: 0.65rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(255, 255, 255, 0.4);
  }

  .ad-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    color: rgba(255, 255, 255, 0.4);
  }

  .ad-placeholder svg {
    opacity: 0.6;
  }

  .ad-placeholder span {
    font-size: 0.9rem;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .ad-content {
      padding: 1.5rem;
      min-height: 100px;
    }

    .ad-placeholder svg {
      width: 36px;
      height: 36px;
    }
  }
</style>
