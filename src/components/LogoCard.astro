---
import type { LogoPrompt } from '../types/logo';

interface Props {
  logo: LogoPrompt;
}

const { logo } = Astro.props;
---

<article class="logo-card">
  <div class="card-header">
    <span class="category">{logo.category}</span>
    <span class="date">{new Date(logo.createdAt).toLocaleDateString()}</span>
  </div>

  <p class="prompt">{logo.prompt}</p>

  <div class="generations">
    <h4>Generated Images ({logo.generations.length} models)</h4>
    <div class="image-grid">
      {logo.generations.map((gen) => (
        <div class="generation">
          <img src={gen.imageUrl} alt={`${logo.prompt} - ${gen.model}`} loading="lazy" />
          <span class="model-name">{gen.model}</span>
        </div>
      ))}
    </div>
  </div>
</article>

<style>
  .logo-card {
    background: linear-gradient(135deg, rgba(30, 30, 40, 0.9), rgba(20, 20, 30, 0.95));
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 1.5rem;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .logo-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(136, 58, 234, 0.2);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .category {
    background: linear-gradient(135deg, rgb(136, 58, 234), rgb(224, 204, 250));
    color: #13151a;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .date {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.8rem;
  }

  .prompt {
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .generations h4 {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.85rem;
    margin-bottom: 0.75rem;
    font-weight: 500;
  }

  .image-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    gap: 0.75rem;
  }

  .generation {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .generation img {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    border-radius: 8px;
    border: 2px solid transparent;
    transition: border-color 0.2s;
  }

  .generation:hover img {
    border-color: rgb(136, 58, 234);
  }

  .model-name {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.6);
    text-align: center;
  }
</style>
