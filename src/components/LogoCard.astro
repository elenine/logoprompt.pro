---
import type { LogoPrompt } from '../types/logo';

interface Props {
  logo: LogoPrompt;
}

const { logo } = Astro.props;
---

<article class="logo-card">
  <header class="logo-header">
    <h2 class="logo-title">{logo.title}</h2>
    <span class="logo-category">{logo.category}</span>
  </header>

  <div class="logo-prompt">
    <p>{logo.prompt}</p>
  </div>

  <div class="logo-tags">
    {logo.tags.map((tag) => (
      <span class="tag">#{tag}</span>
    ))}
  </div>

  <div class="logo-outputs">
    <h3 class="outputs-title">Generated Outputs ({logo.outputs.length} models)</h3>
    <div class="outputs-grid">
      {logo.outputs.map((output) => (
        <div class="output-item">
          <img
            src={output.imageUrl}
            alt={`${logo.title} generated by ${output.model}`}
            loading="lazy"
          />
          <span class="model-name">{output.model}</span>
        </div>
      ))}
    </div>
  </div>

  <footer class="logo-footer">
    <time datetime={logo.createdAt}>Created: {new Date(logo.createdAt).toLocaleDateString()}</time>
  </footer>
</article>

<style>
  .logo-card {
    background: linear-gradient(135deg, rgba(var(--accent-dark), 0.8), rgba(var(--accent-dark), 0.4));
    border: 1px solid rgba(var(--accent-light), 0.2);
    border-radius: 16px;
    padding: 1.5rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .logo-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(var(--accent), 0.2);
  }

  .logo-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .logo-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .logo-category {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.35rem 0.75rem;
    background: rgba(var(--accent), 0.3);
    border-radius: 20px;
    color: rgb(var(--accent-light));
    white-space: nowrap;
  }

  .logo-prompt {
    background: rgba(0, 0, 0, 0.3);
    border-radius: 8px;
    padding: 1rem;
    margin-bottom: 1rem;
  }

  .logo-prompt p {
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.85);
  }

  .logo-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .tag {
    font-size: 0.8rem;
    color: rgb(var(--accent-light));
    opacity: 0.8;
  }

  .outputs-title {
    font-size: 0.9rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    color: rgba(255, 255, 255, 0.7);
  }

  .outputs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
    gap: 0.75rem;
  }

  .output-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .output-item img {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    border-radius: 8px;
    border: 2px solid rgba(var(--accent-light), 0.2);
    transition: border-color 0.2s ease;
  }

  .output-item:hover img {
    border-color: rgba(var(--accent), 0.6);
  }

  .model-name {
    font-size: 0.7rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.6);
    text-align: center;
  }

  .logo-footer {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(var(--accent-light), 0.1);
  }

  .logo-footer time {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.5);
  }
</style>
