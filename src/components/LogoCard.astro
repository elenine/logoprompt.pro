---
import type { LogoGeneration } from '../types/logo';

interface Props {
  generation: LogoGeneration;
}

const { generation } = Astro.props;

// Truncate prompt for preview
const promptPreview = generation.prompt.length > 80
  ? generation.prompt.substring(0, 80) + '...'
  : generation.prompt;
---

<article class="logo-card" data-prompt={generation.prompt} data-image-url={generation.imageUrl}>
  <div class="logo-image">
    <img
      src={generation.imageUrl}
      alt={`Logo generated by ${generation.model}`}
      loading="lazy"
    />
    <span class="model-badge">{generation.model}</span>
  </div>

  <div class="logo-content">
    <p class="prompt-preview">{promptPreview}</p>

    <div class="card-actions">
      <div class="copy-buttons">
        <button class="copy-btn copy-prompt-btn" type="button">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
            <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
          </svg>
          <span>Prompt</span>
        </button>
        <button class="copy-btn copy-image-btn secondary" type="button">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <circle cx="8.5" cy="8.5" r="1.5"></circle>
            <polyline points="21 15 16 10 5 21"></polyline>
          </svg>
          <span>Image</span>
        </button>
      </div>

      <time datetime={generation.generatedAt}>
        {new Date(generation.generatedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
      </time>
    </div>
  </div>
</article>

<style>
  .logo-card {
    background: var(--card-bg);
    backdrop-filter: blur(10px);
    border: 1px solid var(--border);
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .logo-card:hover {
    transform: translateY(-6px);
    border-color: var(--border-hover);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.3),
      var(--glow);
  }

  .logo-image {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
    background: linear-gradient(135deg, rgba(var(--accent), 0.05), rgba(var(--secondary), 0.05));
  }

  .logo-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .logo-card:hover .logo-image img {
    transform: scale(1.05);
  }

  .model-badge {
    position: absolute;
    top: 0.875rem;
    right: 0.875rem;
    font-size: 0.7rem;
    font-weight: 600;
    padding: 0.4rem 0.875rem;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    color: rgb(var(--accent-light));
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .logo-content {
    padding: 1.25rem;
  }

  .prompt-preview {
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--text-secondary);
    margin: 0 0 1rem 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    min-height: 2.8em;
  }

  .card-actions {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
  }

  .copy-buttons {
    display: flex;
    gap: 0.5rem;
    flex: 1;
  }

  .copy-btn {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.6rem 1rem;
    font-size: 0.8rem;
    font-weight: 500;
    color: white;
    background: linear-gradient(135deg, rgba(var(--accent), 0.8), rgba(var(--secondary), 0.6));
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    flex: 1;
    justify-content: center;
  }

  .copy-btn:hover {
    background: linear-gradient(135deg, rgba(var(--accent), 1), rgba(var(--secondary), 0.8));
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(var(--accent), 0.3);
  }

  .copy-btn.secondary {
    background: var(--surface);
    border: 1px solid var(--border);
    color: var(--text-secondary);
  }

  .copy-btn.secondary:hover {
    background: var(--surface-hover);
    border-color: var(--border-hover);
    color: var(--text-primary);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .copy-btn.copied {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.8), rgba(16, 185, 129, 0.8)) !important;
    border-color: rgba(34, 197, 94, 0.6) !important;
    color: white !important;
  }

  .copy-btn svg {
    flex-shrink: 0;
  }

  time {
    font-size: 0.75rem;
    color: var(--text-muted);
    white-space: nowrap;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.logo-card');

    cards.forEach(card => {
      const prompt = card.getAttribute('data-prompt') || '';
      const imageUrl = card.getAttribute('data-image-url') || '';

      const copyPromptBtn = card.querySelector('.copy-prompt-btn');
      const copyImageBtn = card.querySelector('.copy-image-btn');

      copyPromptBtn?.addEventListener('click', async (e) => {
        e.stopPropagation();
        try {
          await navigator.clipboard.writeText(prompt);
          showCopied(copyPromptBtn as HTMLButtonElement, 'Copied!');
        } catch (err) {
          console.error('Failed to copy prompt:', err);
        }
      });

      copyImageBtn?.addEventListener('click', async (e) => {
        e.stopPropagation();
        try {
          const response = await fetch(imageUrl);
          const blob = await response.blob();
          const pngBlob = await convertToPng(blob);
          await navigator.clipboard.write([
            new ClipboardItem({ 'image/png': pngBlob })
          ]);
          showCopied(copyImageBtn as HTMLButtonElement, 'Copied!');
        } catch (err) {
          console.error('Failed to copy image:', err);
        }
      });
    });

    function showCopied(btn: HTMLButtonElement, message: string) {
      const originalText = btn.querySelector('span')?.textContent || '';
      const span = btn.querySelector('span');
      if (span) {
        span.textContent = message;
        btn.classList.add('copied');
        setTimeout(() => {
          span.textContent = originalText;
          btn.classList.remove('copied');
        }, 2000);
      }
    }

    async function convertToPng(blob: Blob): Promise<Blob> {
      return new Promise((resolve, reject) => {
        const img = new Image();
        img.onload = () => {
          const canvas = document.createElement('canvas');
          canvas.width = img.width;
          canvas.height = img.height;
          const ctx = canvas.getContext('2d');
          if (!ctx) {
            reject(new Error('Could not get canvas context'));
            return;
          }
          ctx.drawImage(img, 0, 0);
          canvas.toBlob((pngBlob) => {
            if (pngBlob) {
              resolve(pngBlob);
            } else {
              reject(new Error('Could not convert to PNG'));
            }
          }, 'image/png');
        };
        img.onerror = () => reject(new Error('Could not load image'));
        img.src = URL.createObjectURL(blob);
      });
    }
  });
</script>
