---
import type { LogoGeneration } from '../types/logo';

interface Props {
  generation: LogoGeneration;
}

const { generation } = Astro.props;
---

<article class="logo-card">
  <div class="logo-image">
    <img
      src={generation.imageUrl}
      alt={`${generation.title} generated by ${generation.model}`}
      loading="lazy"
    />
    <span class="model-badge">{generation.model}</span>
  </div>

  <div class="logo-content">
    <header class="logo-header">
      <h2 class="logo-title">{generation.title}</h2>
      <span class="logo-category">{generation.category}</span>
    </header>

    <div class="logo-prompt">
      <p>{generation.prompt}</p>
    </div>

    <div class="logo-tags">
      {generation.tags.map((tag) => (
        <span class="tag">#{tag}</span>
      ))}
    </div>

    <footer class="logo-footer">
      <time datetime={generation.generatedAt}>
        {new Date(generation.generatedAt).toLocaleDateString()}
      </time>
    </footer>
  </div>
</article>

<style>
  .logo-card {
    background: linear-gradient(135deg, rgba(var(--accent-dark), 0.8), rgba(var(--accent-dark), 0.4));
    border: 1px solid rgba(var(--accent-light), 0.2);
    border-radius: 16px;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .logo-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(var(--accent), 0.2);
  }

  .logo-image {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
  }

  .logo-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .logo-card:hover .logo-image img {
    transform: scale(1.05);
  }

  .model-badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.35rem 0.75rem;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
    border-radius: 20px;
    color: rgb(var(--accent-light));
  }

  .logo-content {
    padding: 1.25rem;
  }

  .logo-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .logo-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0;
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .logo-category {
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.3rem 0.6rem;
    background: rgba(var(--accent), 0.3);
    border-radius: 20px;
    color: rgb(var(--accent-light));
    white-space: nowrap;
  }

  .logo-prompt {
    background: rgba(0, 0, 0, 0.3);
    border-radius: 8px;
    padding: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .logo-prompt p {
    margin: 0;
    font-size: 0.85rem;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.85);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .logo-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-bottom: 0.75rem;
  }

  .tag {
    font-size: 0.75rem;
    color: rgb(var(--accent-light));
    opacity: 0.8;
  }

  .logo-footer {
    padding-top: 0.75rem;
    border-top: 1px solid rgba(var(--accent-light), 0.1);
  }

  .logo-footer time {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.5);
  }
</style>
