---
import type { LogoGeneration } from '../types/logo';

interface Props {
  generation: LogoGeneration;
}

const { generation } = Astro.props;
---

<article class="logo-card" data-prompt={generation.prompt} data-image-url={generation.imageUrl}>
  <div class="logo-image">
    <img
      src={generation.imageUrl}
      alt={`Logo generated by ${generation.model}`}
      loading="lazy"
    />
    <span class="model-badge">{generation.model}</span>
  </div>

  <div class="logo-content">
    <div class="copy-buttons">
      <button class="copy-btn copy-prompt-btn" type="button">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
          <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
        </svg>
        <span>Copy Prompt</span>
      </button>
      <button class="copy-btn copy-image-btn" type="button">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
          <circle cx="8.5" cy="8.5" r="1.5"></circle>
          <polyline points="21 15 16 10 5 21"></polyline>
        </svg>
        <span>Copy Image</span>
      </button>
    </div>

    <footer class="logo-footer">
      <time datetime={generation.generatedAt}>
        {new Date(generation.generatedAt).toLocaleDateString()}
      </time>
    </footer>
  </div>
</article>

<style>
  .logo-card {
    background: linear-gradient(135deg, rgba(var(--accent-dark), 0.8), rgba(var(--accent-dark), 0.4));
    border: 1px solid rgba(var(--accent-light), 0.2);
    border-radius: 16px;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .logo-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(var(--accent), 0.2);
  }

  .logo-image {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
  }

  .logo-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .logo-card:hover .logo-image img {
    transform: scale(1.05);
  }

  .model-badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.35rem 0.75rem;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
    border-radius: 20px;
    color: rgb(var(--accent-light));
  }

  .logo-content {
    padding: 1rem;
  }

  .copy-buttons {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .copy-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 100%;
    padding: 0.6rem 1rem;
    font-size: 0.8rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.9);
    background: rgba(var(--accent), 0.3);
    border: 1px solid rgba(var(--accent-light), 0.3);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .copy-btn:hover {
    background: rgba(var(--accent), 0.5);
    border-color: rgba(var(--accent-light), 0.5);
  }

  .copy-btn.copied {
    background: rgba(34, 197, 94, 0.4);
    border-color: rgba(34, 197, 94, 0.6);
  }

  .copy-btn svg {
    flex-shrink: 0;
  }

  .logo-footer {
    padding-top: 0.75rem;
    border-top: 1px solid rgba(var(--accent-light), 0.1);
  }

  .logo-footer time {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.5);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.logo-card');

    cards.forEach(card => {
      const prompt = card.getAttribute('data-prompt') || '';
      const imageUrl = card.getAttribute('data-image-url') || '';

      const copyPromptBtn = card.querySelector('.copy-prompt-btn');
      const copyImageBtn = card.querySelector('.copy-image-btn');

      copyPromptBtn?.addEventListener('click', async (e) => {
        e.stopPropagation();
        try {
          await navigator.clipboard.writeText(prompt);
          showCopied(copyPromptBtn as HTMLButtonElement, 'Copied!');
        } catch (err) {
          console.error('Failed to copy prompt:', err);
        }
      });

      copyImageBtn?.addEventListener('click', async (e) => {
        e.stopPropagation();
        try {
          const response = await fetch(imageUrl);
          const blob = await response.blob();
          const pngBlob = await convertToPng(blob);
          await navigator.clipboard.write([
            new ClipboardItem({ 'image/png': pngBlob })
          ]);
          showCopied(copyImageBtn as HTMLButtonElement, 'Copied!');
        } catch (err) {
          console.error('Failed to copy image:', err);
        }
      });
    });

    function showCopied(btn: HTMLButtonElement, message: string) {
      const originalText = btn.querySelector('span')?.textContent || '';
      const span = btn.querySelector('span');
      if (span) {
        span.textContent = message;
        btn.classList.add('copied');
        setTimeout(() => {
          span.textContent = originalText;
          btn.classList.remove('copied');
        }, 2000);
      }
    }

    async function convertToPng(blob: Blob): Promise<Blob> {
      return new Promise((resolve, reject) => {
        const img = new Image();
        img.onload = () => {
          const canvas = document.createElement('canvas');
          canvas.width = img.width;
          canvas.height = img.height;
          const ctx = canvas.getContext('2d');
          if (!ctx) {
            reject(new Error('Could not get canvas context'));
            return;
          }
          ctx.drawImage(img, 0, 0);
          canvas.toBlob((pngBlob) => {
            if (pngBlob) {
              resolve(pngBlob);
            } else {
              reject(new Error('Could not convert to PNG'));
            }
          }, 'image/png');
        };
        img.onerror = () => reject(new Error('Could not load image'));
        img.src = URL.createObjectURL(blob);
      });
    }
  });
</script>
