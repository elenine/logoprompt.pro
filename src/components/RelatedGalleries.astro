---
interface GalleryLink {
  href: string;
  label: string;
  description: string;
  icon: string;
}

interface Props {
  currentGallery: 'logos' | 'products' | 'nature' | 'people';
}

const { currentGallery } = Astro.props;

const allGalleries: Record<string, GalleryLink> = {
  logos: {
    href: '/',
    label: 'Logo Prompts',
    description: 'AI-generated logo concepts for brands and businesses',
    icon: 'M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5'
  },
  products: {
    href: '/products',
    label: 'Product Prompts',
    description: 'Professional product photography and e-commerce shots',
    icon: 'M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4zM3 6h18M16 10a4 4 0 0 1-8 0'
  },
  nature: {
    href: '/nature',
    label: 'Nature Prompts',
    description: 'Stunning landscapes, wildlife, and outdoor scenes',
    icon: 'M12 22c-4.97 0-9-2.582-9-7v-.088C3 12.794 4.338 11.1 6.375 10c1.949-1.052 3.101-2.99 3.101-5 0-1.007.297-1.965.84-2.769A10.48 10.48 0 0 1 12 2c.74 0 1.461.072 2.16.209.56.11.944.632.833 1.192A7.002 7.002 0 0 0 19 10c0 2.01 1.151 3.948 3.101 5C24.137 16.1 25.475 17.794 25.475 19.912V20c0 4.418-4.03 7-9 7z'
  },
  people: {
    href: '/people',
    label: 'People Prompts',
    description: 'Portraits, characters, and human-focused imagery',
    icon: 'M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2M12 11a4 4 0 1 0 0-8 4 4 0 0 0 0 8z'
  }
};

// Filter out current gallery
const relatedGalleries = Object.entries(allGalleries)
  .filter(([key]) => key !== currentGallery)
  .map(([, value]) => value);
---

<section class="related-galleries">
  <div class="related-header">
    <h2 class="related-title">Explore More Prompts</h2>
    <p class="related-subtitle">Discover AI prompts across all categories</p>
  </div>

  <div class="related-grid">
    {relatedGalleries.map((gallery) => (
      <a href={gallery.href} class="related-card">
        <div class="card-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d={gallery.icon}></path>
          </svg>
        </div>
        <div class="card-content">
          <h3 class="card-title">{gallery.label}</h3>
          <p class="card-description">{gallery.description}</p>
        </div>
        <svg class="card-arrow" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    ))}
  </div>
</section>

<style>
  .related-galleries {
    margin-top: 4rem;
    padding: 3rem 0;
    border-top: 1px solid rgb(var(--card-border));
  }

  .related-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .related-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: rgb(var(--text-primary));
    margin: 0 0 0.5rem 0;
  }

  .related-subtitle {
    font-size: 0.95rem;
    color: rgb(var(--text-secondary));
    margin: 0;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25rem;
  }

  .related-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem;
    background: rgb(var(--card-bg));
    border: 1px solid rgb(var(--card-border));
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all var(--transition-base);
  }

  .related-card:hover {
    border-color: rgba(var(--accent), 0.4);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .related-card:hover .card-arrow {
    transform: translateX(4px);
    color: rgb(var(--accent));
  }

  .card-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: rgb(var(--accent-light));
    border-radius: var(--radius-md);
    color: rgb(var(--accent));
    flex-shrink: 0;
  }

  .card-content {
    flex: 1;
    min-width: 0;
  }

  .card-title {
    font-size: 1rem;
    font-weight: 600;
    color: rgb(var(--text-primary));
    margin: 0 0 0.25rem 0;
  }

  .card-description {
    font-size: 0.8rem;
    color: rgb(var(--text-tertiary));
    margin: 0;
    line-height: 1.4;
  }

  .card-arrow {
    color: rgb(var(--text-muted));
    flex-shrink: 0;
    transition: all var(--transition-fast);
  }

  @media (max-width: 900px) {
    .related-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 600px) {
    .related-galleries {
      margin-top: 3rem;
      padding: 2rem 0;
    }

    .related-card {
      padding: 1rem;
    }

    .card-icon {
      width: 40px;
      height: 40px;
    }

    .card-icon svg {
      width: 20px;
      height: 20px;
    }
  }
</style>
