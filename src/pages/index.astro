---
import Layout from '../layouts/Layout.astro';
import LogoCard from '../components/LogoCard.astro';
import ModelFilter from '../components/ModelFilter.astro';
import type { LogoFile, LogoGeneration } from '../types/logo';

// Load all logo files dynamically using Vite's glob import
const logoFiles = import.meta.glob('../data/logos/logo-*.json', { eager: true });

// Combine all logos from all files
const allLogos: LogoGeneration[] = [];

for (const path in logoFiles) {
  const file = logoFiles[path] as { default: LogoFile };
  const logoFile = file.default;

  // Flatten logos into individual generation cards
  for (const logo of logoFile.logos) {
    for (const output of logo.outputs) {
      allLogos.push({
        id: output.id,
        prompt: logo.prompt,
        model: output.model,
        imageUrl: output.imageUrl,
        generatedAt: output.generatedAt,
      });
    }
  }
}

// Sort by generation date (newest first)
const generations = allLogos.sort(
  (a, b) => new Date(b.generatedAt).getTime() - new Date(a.generatedAt).getTime()
);

// Get unique models for filter
const models = [...new Set(generations.map(g => g.model))].sort();
---

<Layout title="LogoPrompt Pro - AI Logo Generation Gallery">
  <main>
    <header class="hero">
      <h1>Logo<span class="text-gradient">Prompt</span>.pro</h1>
      <p class="tagline">
        Explore AI-generated logo concepts across multiple models.
        One prompt, many creative possibilities.
      </p>
    </header>

    <section class="how-to-use">
      <h2>How to Use</h2>
      <ol class="steps">
        <li>
          <span class="step-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>
          </span>
          <strong>Copy prompt</strong>
        </li>
        <li>
          <span class="step-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
          </span>
          <strong>Open Ideogram or Gemini</strong>
        </li>
        <li>
          <span class="step-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></svg>
          </span>
          <strong>Paste & generate</strong>
        </li>
      </ol>
    </section>

    <section class="logos-section">
      <h2 class="section-title">Recent Generations</h2>
      <ModelFilter models={models} />
      <div class="logos-grid">
        {generations.map((generation) => (
          <LogoCard generation={generation} />
        ))}
      </div>

      <!-- Loading indicator for infinite scroll -->
      <div class="loading-indicator" style="display: none;">
        <div class="spinner"></div>
        <span>Loading more...</span>
      </div>

      <!-- Scroll sentinel for intersection observer -->
      <div class="scroll-sentinel"></div>
    </section>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 2rem 1rem;
    max-width: 1400px;
  }

  .hero {
    text-align: center;
    padding: 2rem 0 3rem;
  }

  h1 {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 1rem 0;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 400%;
    background-position: 0%;
  }

  .tagline {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .how-to-use {
    max-width: 700px;
    margin: 0 auto 2rem;
    padding: 1rem 1.5rem;
    background: rgba(var(--accent-dark), 0.3);
    border-radius: 12px;
    border: 1px solid rgba(var(--accent-light), 0.1);
  }

  .how-to-use h2 {
    font-size: 0.75rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    color: rgba(255, 255, 255, 0.5);
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .steps {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 2rem;
  }

  .steps li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
  }

  .steps li:not(:last-child)::after {
    content: '';
    position: absolute;
    right: -1.25rem;
    top: 50%;
    transform: translateY(-50%);
    width: 6px;
    height: 6px;
    border-top: 2px solid rgba(255, 255, 255, 0.3);
    border-right: 2px solid rgba(255, 255, 255, 0.3);
    transform: translateY(-50%) rotate(45deg);
  }

  .step-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: linear-gradient(135deg, rgb(var(--accent)), rgb(var(--accent-light)));
    border-radius: 8px;
    color: white;
    flex-shrink: 0;
  }

  .steps li strong {
    font-size: 0.85rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.8);
  }

  @media (max-width: 600px) {
    .steps {
      flex-direction: column;
      gap: 0.75rem;
    }

    .steps li:not(:last-child)::after {
      display: none;
    }
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 1.5rem 0;
    color: rgba(255, 255, 255, 0.9);
  }

  .logos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  /* Animation for cards loading in */
  .logos-grid :global(.logo-card) {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.4s ease, transform 0.4s ease;
  }

  .logos-grid :global(.logo-card.fade-in) {
    opacity: 1;
    transform: translateY(0);
  }

  /* Ad banner styles (for dynamically inserted ads) */
  .logos-grid :global(.ad-banner) {
    grid-column: 1 / -1;
    width: 100%;
    padding: 1rem 0;
  }

  .logos-grid :global(.ad-content) {
    background: linear-gradient(135deg, rgba(var(--accent-dark), 0.6), rgba(var(--accent-dark), 0.3));
    border: 1px dashed rgba(var(--accent-light), 0.3);
    border-radius: 12px;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 120px;
    position: relative;
  }

  .logos-grid :global(.ad-label) {
    position: absolute;
    top: 0.5rem;
    left: 0.75rem;
    font-size: 0.65rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(255, 255, 255, 0.4);
  }

  .logos-grid :global(.ad-placeholder) {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    color: rgba(255, 255, 255, 0.4);
  }

  .logos-grid :global(.ad-placeholder svg) {
    opacity: 0.6;
  }

  .logos-grid :global(.ad-placeholder span) {
    font-size: 0.9rem;
    font-weight: 500;
  }

  /* Loading indicator */
  .loading-indicator {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 2rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .spinner {
    width: 24px;
    height: 24px;
    border: 3px solid rgba(var(--accent-light), 0.3);
    border-top-color: rgb(var(--accent-light));
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  /* Scroll sentinel - invisible element at bottom */
  .scroll-sentinel {
    height: 1px;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .logos-grid :global(.ad-content) {
      padding: 1.5rem;
      min-height: 100px;
    }

    .logos-grid :global(.ad-placeholder svg) {
      width: 36px;
      height: 36px;
    }
  }

  @media (max-width: 400px) {
    .logos-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
