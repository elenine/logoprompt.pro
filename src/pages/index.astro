---
import Layout from '../layouts/Layout.astro';
import LogoCard from '../components/LogoCard.astro';
import ModelFilter from '../components/ModelFilter.astro';
import Pagination from '../components/Pagination.astro';
import logosData from '../data/logos.json';
import type { LogoPrompt, LogoGeneration } from '../types/logo';

const logos = logosData.logos as LogoPrompt[];
const ITEMS_PER_PAGE = 12;

// Flatten logos into individual generation cards
const generations: LogoGeneration[] = logos.flatMap((logo) =>
  logo.outputs.map((output) => ({
    id: output.id,
    prompt: logo.prompt,
    model: output.model,
    imageUrl: output.imageUrl,
    generatedAt: output.generatedAt,
  }))
);

// Sort by generation date (newest first)
generations.sort((a, b) => new Date(b.generatedAt).getTime() - new Date(a.generatedAt).getTime());

// Get unique models for filter
const models = [...new Set(generations.map(g => g.model))].sort();
---

<Layout title="LogoPrompt Pro - AI Logo Generation Gallery">
  <main>
    <header class="hero">
      <h1>Logo<span class="text-gradient">Prompt</span>.pro</h1>
      <p class="tagline">
        Explore AI-generated logo concepts across multiple models.
        One prompt, many creative possibilities.
      </p>
    </header>

    <section class="logos-section">
      <h2 class="section-title">Recent Generations</h2>
      <ModelFilter models={models} />
      <div class="logos-grid">
        {generations.map((generation) => (
          <LogoCard generation={generation} />
        ))}
      </div>
      <Pagination totalItems={generations.length} itemsPerPage={ITEMS_PER_PAGE} />
    </section>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 2rem 1rem;
    max-width: 1400px;
  }

  .hero {
    text-align: center;
    padding: 2rem 0 3rem;
  }

  h1 {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 1rem 0;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 400%;
    background-position: 0%;
  }

  .tagline {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 1.5rem 0;
    color: rgba(255, 255, 255, 0.9);
  }

  .logos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  @media (max-width: 400px) {
    .logos-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
