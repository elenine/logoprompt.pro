---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import LogoCard from '../components/LogoCard.astro';
import ModelFilter from '../components/ModelFilter.astro';
import type { LogoFile, LogoGeneration } from '../types/logo';

// Load all logo files dynamically using Vite's glob import
const logoFiles = import.meta.glob('../data/logos/logo-*.json', { eager: true });

// Combine all logos from all files
const allLogos: LogoGeneration[] = [];

for (const path in logoFiles) {
  const file = logoFiles[path] as { default: LogoFile };
  const logoFile = file.default;

  // Flatten logos into individual generation cards
  for (const logo of logoFile.logos) {
    for (const output of logo.outputs) {
      allLogos.push({
        id: output.id,
        prompt: logo.prompt,
        model: output.model,
        imageUrl: output.imageUrl,
        generatedAt: output.generatedAt,
      });
    }
  }
}

// Sort by generation date (newest first)
const generations = allLogos.sort(
  (a, b) => new Date(b.generatedAt).getTime() - new Date(a.generatedAt).getTime()
);

// Get unique models for filter
const models = [...new Set(generations.map(g => g.model))].sort();
---

<Layout title="LogoPrompt Pro - AI Logo Generation Gallery">
  <main>
    <header class="hero">
      <div class="hero-glow"></div>
      <div class="hero-content">
        <div class="hero-badge">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
          <span>AI-Powered Logo Inspiration</span>
        </div>
        <h1>
          <span class="hero-title-line">Discover stunning</span>
          <span class="hero-title-gradient">AI logo prompts</span>
        </h1>
        <p class="tagline">
          Explore a curated collection of AI-generated logo concepts. Copy prompts instantly
          and create unique brand identities with Ideogram, Gemini, and more.
        </p>
        <div class="hero-stats">
          <div class="stat">
            <span class="stat-value">{generations.length}</span>
            <span class="stat-label">Logos</span>
          </div>
          <div class="stat-divider"></div>
          <div class="stat">
            <span class="stat-value">{models.length}</span>
            <span class="stat-label">AI Models</span>
          </div>
          <div class="stat-divider"></div>
          <div class="stat">
            <span class="stat-value">Free</span>
            <span class="stat-label">To Use</span>
          </div>
        </div>
      </div>
    </header>

    <section class="how-to-use">
      <ol class="steps">
        <li class="step-item">
          <span class="step-num">1</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>
          <span><strong>Copy prompt</strong> from any logo</span>
        </li>
        <li class="step-item">
          <span class="step-num">2</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
          <span><strong>Open</strong> Ideogram or Gemini</span>
        </li>
        <li class="step-item">
          <span class="step-num">3</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></svg>
          <span><strong>Paste & generate</strong> your logo</span>
        </li>
      </ol>
    </section>

    <section class="pro-banner" id="pro-banner">
      <div class="pro-banner-content">
        <div class="pro-banner-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>
        </div>
        <div class="pro-banner-text">
          <span class="pro-banner-title">Go Pro</span>
          <span class="pro-banner-subtitle">Remove all ads for a distraction-free experience</span>
        </div>
        <a href="/subscription" class="pro-banner-btn">
          Subscribe
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
        </a>
      </div>
    </section>

    <script>
      // Hide pro banner for subscribed users
      (async function() {
        try {
          const response = await fetch('/api/user/subscription-status');
          if (response.ok) {
            const data = await response.json();
            if (data.isSubscribed) {
              const banner = document.getElementById('pro-banner');
              if (banner) banner.style.display = 'none';
            }
          }
        } catch (e) {
          // Silently fail - show banner by default
        }
      })();
    </script>

    <section class="logos-section">
      <ModelFilter models={models} />
      <div class="logos-grid">
        {generations.map((generation) => (
          <LogoCard generation={generation} />
        ))}
      </div>

      <!-- Loading indicator for infinite scroll -->
      <div class="loading-indicator" style="display: none;">
        <div class="spinner"></div>
        <span>Loading more...</span>
      </div>

      <!-- Scroll sentinel for intersection observer -->
      <div class="scroll-sentinel"></div>
    </section>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 0 1rem 2rem;
    max-width: 1400px;
  }

  /* Hero Section */
  .hero {
    position: relative;
    text-align: center;
    padding: 2rem 0 2.5rem;
    overflow: hidden;
  }

  .hero-glow {
    display: none;
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.875rem;
    background: rgb(var(--accent-light));
    border: 1px solid rgba(var(--accent), 0.2);
    border-radius: var(--radius-full);
    color: rgb(var(--accent-dark));
    font-size: 0.75rem;
    font-weight: 500;
    margin-bottom: 1rem;
    animation: fadeInUp 0.6s ease-out;
  }

  .hero-badge svg {
    color: rgb(var(--accent));
  }

  h1 {
    font-size: clamp(2rem, 6vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 1rem 0;
    letter-spacing: -0.03em;
    animation: fadeInUp 0.6s ease-out 0.1s both;
  }

  .hero-title-line {
    display: block;
    color: rgb(var(--text-primary));
  }

  .hero-title-gradient {
    display: block;
    color: rgb(var(--accent));
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .tagline {
    font-size: 1rem;
    color: rgb(var(--text-secondary));
    max-width: 550px;
    margin: 0 auto 1.25rem;
    line-height: 1.6;
    animation: fadeInUp 0.6s ease-out 0.2s both;
  }

  .hero-stats {
    display: inline-flex;
    align-items: center;
    gap: 1.25rem;
    padding: 0.75rem 1.5rem;
    background: rgb(var(--bg-primary));
    border: 1px solid rgb(var(--card-border));
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    animation: fadeInUp 0.6s ease-out 0.3s both;
  }

  .stat {
    text-align: center;
  }

  .stat-value {
    display: block;
    font-size: 1.25rem;
    font-weight: 700;
    color: rgb(var(--accent));
    line-height: 1;
  }

  .stat-label {
    display: block;
    font-size: 0.7rem;
    font-weight: 500;
    color: rgb(var(--text-tertiary));
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-top: 0.2rem;
  }

  .stat-divider {
    width: 1px;
    height: 28px;
    background: rgb(var(--card-border));
  }

  /* How to Use Section */
  .how-to-use {
    max-width: 700px;
    margin: 0 auto 2rem;
    padding: 0.875rem 1.25rem;
    background: rgb(var(--bg-primary));
    border: 1px solid rgb(var(--card-border));
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    animation: fadeInUp 0.6s ease-out 0.4s both;
  }

  .steps {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
  }

  .step-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: rgb(var(--text-secondary));
  }

  .step-item svg {
    color: rgb(var(--accent));
    flex-shrink: 0;
  }

  .step-item strong {
    color: rgb(var(--text-primary));
    font-weight: 600;
  }

  .step-num {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    background: rgb(var(--accent-light));
    border-radius: var(--radius-full);
    font-size: 0.7rem;
    font-weight: 700;
    color: rgb(var(--accent-dark));
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .steps {
      flex-direction: column;
      gap: 0.5rem;
      align-items: flex-start;
    }

    .hero {
      padding: 1.5rem 0 2rem;
    }

    .hero-stats {
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.75rem;
      padding: 0.75rem;
    }

    .stat-divider {
      display: none;
    }
  }

  /* Pro Banner */
  .pro-banner {
    max-width: 700px;
    margin: 0 auto 2rem;
    padding: 1rem 1.5rem;
    background: linear-gradient(135deg, rgba(var(--accent), 0.08) 0%, rgba(var(--accent), 0.02) 100%);
    border: 1px solid rgba(var(--accent), 0.2);
    border-radius: var(--radius-lg);
    animation: fadeInUp 0.6s ease-out 0.5s both;
  }

  .pro-banner-content {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .pro-banner-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgb(var(--accent));
    border-radius: var(--radius-md);
    color: white;
    flex-shrink: 0;
  }

  .pro-banner-text {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .pro-banner-title {
    font-size: 0.95rem;
    font-weight: 700;
    color: rgb(var(--text-primary));
  }

  .pro-banner-subtitle {
    font-size: 0.8rem;
    color: rgb(var(--text-secondary));
  }

  .pro-banner-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 1rem;
    background: rgb(var(--accent));
    color: white;
    border-radius: var(--radius-md);
    font-size: 0.8rem;
    font-weight: 600;
    text-decoration: none;
    transition: background var(--transition-fast);
    flex-shrink: 0;
  }

  .pro-banner-btn:hover {
    background: rgb(var(--accent-hover));
  }

  @media (max-width: 600px) {
    .pro-banner-content {
      flex-direction: column;
      text-align: center;
    }

    .pro-banner-text {
      align-items: center;
    }

    .pro-banner-btn {
      width: 100%;
      justify-content: center;
    }
  }

  /* Logos Section */
  .logos-section {
    padding-top: 1rem;
  }

  .logos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  /* Animation for cards loading in */
  .logos-grid :global(.logo-card) {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.4s ease, transform 0.4s ease;
  }

  .logos-grid :global(.logo-card.fade-in) {
    opacity: 1;
    transform: translateY(0);
  }

  /* Ad banner styles (for dynamically inserted ads) */
  .logos-grid :global(.ad-banner) {
    grid-column: 1 / -1;
    width: 100%;
    padding: 1rem 0;
  }

  .logos-grid :global(.ad-content) {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .logos-grid :global(.ad-label) {
    font-size: 0.6rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgb(var(--text-tertiary));
    margin-bottom: 0.25rem;
  }

  .logos-grid :global(.ad-container) {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 90px;
    width: 100%;
    max-width: 728px;
  }

  .logos-grid :global(.ad-container iframe) {
    max-width: 100%;
  }

  /* Loading indicator */
  .loading-indicator {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 2rem;
    color: rgb(var(--text-tertiary));
  }

  .spinner {
    width: 24px;
    height: 24px;
    border: 3px solid rgb(var(--accent-light));
    border-top-color: rgb(var(--accent));
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  /* Scroll sentinel - invisible element at bottom */
  .scroll-sentinel {
    height: 1px;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .logos-grid :global(.ad-container) {
      overflow-x: auto;
    }
  }

  @media (max-width: 400px) {
    .logos-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
