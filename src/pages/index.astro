---
import Layout from '../layouts/Layout.astro';
import LogoCard from '../components/LogoCard.astro';
import ModelFilter from '../components/ModelFilter.astro';
import logosData from '../data/logos.json';
import type { LogoPrompt, LogoGeneration } from '../types/logo';

const logos = logosData.logos as LogoPrompt[];

// Flatten logos into individual generation cards
const generations: LogoGeneration[] = logos.flatMap((logo) =>
  logo.outputs.map((output) => ({
    id: output.id,
    prompt: logo.prompt,
    model: output.model,
    imageUrl: output.imageUrl,
    generatedAt: output.generatedAt,
  }))
);

// Sort by generation date (newest first)
generations.sort((a, b) => new Date(b.generatedAt).getTime() - new Date(a.generatedAt).getTime());

// Get unique models for filter
const models = [...new Set(generations.map(g => g.model))].sort();
---

<Layout title="LogoPrompt Pro - AI Logo Generation Gallery">
  <main>
    <header class="hero">
      <h1>Logo<span class="text-gradient">Prompt</span>.pro</h1>
      <p class="tagline">
        Explore AI-generated logo concepts across multiple models.
        One prompt, many creative possibilities.
      </p>
    </header>

    <section class="how-to-use">
      <h2>How to Use</h2>
      <ol class="steps">
        <li>
          <span class="step-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>
          </span>
          <strong>Copy prompt</strong>
        </li>
        <li>
          <span class="step-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
          </span>
          <strong>Open Ideogram or Gemini</strong>
        </li>
        <li>
          <span class="step-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></svg>
          </span>
          <strong>Paste & generate</strong>
        </li>
      </ol>
    </section>

    <section class="logos-section">
      <h2 class="section-title">Recent Generations</h2>
      <ModelFilter models={models} />
      <div class="logos-grid">
        {generations.map((generation) => (
          <LogoCard generation={generation} />
        ))}
      </div>

      <!-- Loading indicator for infinite scroll -->
      <div class="loading-indicator" style="display: none;">
        <div class="spinner"></div>
        <span>Loading more...</span>
      </div>

      <!-- Scroll sentinel for intersection observer -->
      <div class="scroll-sentinel"></div>
    </section>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    max-width: 1400px;
  }

  .hero {
    text-align: center;
    padding: 4rem 1rem 3rem;
    position: relative;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(var(--accent), 0.1) 0%, transparent 70%);
    pointer-events: none;
    z-index: -1;
  }

  h1 {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 1.25rem 0;
    letter-spacing: -0.02em;
    animation: fadeInUp 0.8s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .text-gradient {
    color: rgb(var(--accent));
  }

  .tagline {
    font-size: 1.15rem;
    color: var(--text-secondary);
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.7;
    animation: fadeInUp 0.8s ease-out 0.1s both;
  }

  .how-to-use {
    max-width: 800px;
    margin: 0 auto 3rem;
    padding: 1.5rem 2rem;
    background: var(--surface);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    border: 1px solid var(--border);
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  .how-to-use h2 {
    font-size: 0.7rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: var(--text-muted);
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  .steps {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
  }

  .steps li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    position: relative;
  }

  .steps li:not(:last-child)::after {
    content: '';
    position: absolute;
    right: -1rem;
    top: 50%;
    width: 8px;
    height: 8px;
    border-top: 2px solid rgba(var(--accent), 0.4);
    border-right: 2px solid rgba(var(--accent), 0.4);
    transform: translateY(-50%) rotate(45deg);
  }

  .step-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(var(--accent), 0.15);
    border: 1px solid rgba(var(--accent), 0.3);
    border-radius: 12px;
    color: rgb(var(--accent-light));
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .steps li:hover .step-icon {
    background: rgba(var(--accent), 0.25);
    border-color: rgba(var(--accent-light), 0.5);
    transform: scale(1.05);
    box-shadow: 0 0 20px rgba(var(--accent), 0.3);
  }

  .steps li strong {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-secondary);
    transition: color 0.3s ease;
  }

  .steps li:hover strong {
    color: var(--text-primary);
  }

  @media (max-width: 700px) {
    .steps {
      flex-direction: column;
      gap: 1rem;
    }

    .steps li:not(:last-child)::after {
      display: none;
    }

    .how-to-use {
      padding: 1.25rem 1.5rem;
    }
  }

  .logos-section {
    animation: fadeInUp 0.8s ease-out 0.3s both;
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 1.5rem 0;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .section-title::before {
    content: '';
    width: 4px;
    height: 1.25rem;
    background: rgb(var(--accent));
    border-radius: 2px;
  }

  .logos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  /* Animation for cards loading in */
  .logos-grid :global(.logo-card) {
    opacity: 0;
    transform: translateY(20px) scale(0.98);
    transition: opacity 0.5s ease, transform 0.5s ease;
  }

  .logos-grid :global(.logo-card.fade-in) {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  /* Ad banner styles (for dynamically inserted ads) */
  .logos-grid :global(.ad-banner) {
    grid-column: 1 / -1;
    width: 100%;
    padding: 1rem 0;
  }

  .logos-grid :global(.ad-content) {
    background: var(--surface);
    border: 1px dashed var(--border);
    border-radius: 16px;
    padding: 2.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 120px;
    position: relative;
    backdrop-filter: blur(10px);
  }

  .logos-grid :global(.ad-label) {
    position: absolute;
    top: 0.75rem;
    left: 1rem;
    font-size: 0.65rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-muted);
  }

  .logos-grid :global(.ad-placeholder) {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    color: var(--text-muted);
  }

  .logos-grid :global(.ad-placeholder svg) {
    opacity: 0.5;
  }

  .logos-grid :global(.ad-placeholder span) {
    font-size: 0.9rem;
    font-weight: 500;
  }

  /* Loading indicator */
  .loading-indicator {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 3rem;
    color: var(--text-muted);
  }

  .spinner {
    width: 28px;
    height: 28px;
    border: 3px solid rgba(var(--accent), 0.2);
    border-top-color: rgb(var(--accent-light));
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  /* Scroll sentinel - invisible element at bottom */
  .scroll-sentinel {
    height: 1px;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    main {
      padding: 0.75rem;
    }

    .hero {
      padding: 2.5rem 0.5rem 2rem;
    }

    .logos-grid :global(.ad-content) {
      padding: 2rem;
      min-height: 100px;
    }

    .logos-grid :global(.ad-placeholder svg) {
      width: 36px;
      height: 36px;
    }
  }

  @media (max-width: 400px) {
    .logos-grid {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }
  }
</style>
