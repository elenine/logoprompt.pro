---
import Layout from '../layouts/Layout.astro';

const helpTopics = [
  {
    icon: 'M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
    title: 'General Questions',
    description: 'Questions about our prompts, how to use them, or which AI platforms work best.'
  },
  {
    icon: 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z',
    title: 'Technical Support',
    description: 'Issues with the website or accessing our content.'
  },
  {
    icon: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
    title: 'Feedback & Ideas',
    description: 'Ideas for new prompts, features, or improvements.'
  },
  {
    icon: 'M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
    title: 'Partnerships',
    description: 'Collaboration, sponsorship, or business inquiries.'
  }
];

const quickLinks = [
  { href: '/about', label: 'About Us', description: 'Learn more about our mission and team' },
  { href: '/privacy', label: 'Privacy Policy', description: 'How we handle your data' },
  { href: '/terms', label: 'Terms & Conditions', description: 'Our terms of service' },
];
---

<Layout title="Contact Us - LogoPrompt.pro">
  <main class="page-content">
    <a href="/" class="back-link">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="19" y1="12" x2="5" y2="12"></line>
        <polyline points="12 19 5 12 12 5"></polyline>
      </svg>
      Back to Gallery
    </a>

    <header class="page-header">
      <h1>Get in <span class="text-gradient">Touch</span></h1>
      <p class="subtitle">We'd love to hear from you! Questions, feedback, or just saying hello.</p>
    </header>

    <section class="email-section">
      <div class="email-card">
        <div class="email-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
        </div>
        <h2>Email Us</h2>
        <p>For all inquiries, reach out to us at:</p>
        <a href="mailto:info@elenine.com" class="email-button">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
          info@elenine.com
        </a>
        <p class="response-time">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
          We aim to respond within 24-48 business hours
        </p>
      </div>
    </section>

    <section class="help-section">
      <h2 class="section-title">How Can We Help?</h2>
      <div class="help-grid">
        {helpTopics.map(topic => (
          <div class="help-card">
            <div class="help-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d={topic.icon}></path>
              </svg>
            </div>
            <div class="help-content">
              <h3>{topic.title}</h3>
              <p>{topic.description}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="links-section">
      <h2 class="section-title">Quick Links</h2>
      <p class="section-description">Before reaching out, you might find answers in these pages:</p>
      <div class="links-grid">
        {quickLinks.map(link => (
          <a href={link.href} class="link-card">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
            <div>
              <span class="link-label">{link.label}</span>
              <span class="link-description">{link.description}</span>
            </div>
          </a>
        ))}
      </div>
    </section>
  </main>
</Layout>

<style>
  .page-content {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1.5rem 4rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: rgb(var(--text-secondary));
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 2.5rem;
    transition: all var(--transition-fast);
  }

  .back-link:hover {
    color: rgb(var(--accent));
    transform: translateX(-4px);
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    margin: 0 0 1rem;
    letter-spacing: -0.02em;
    color: rgb(var(--text-primary));
  }

  .text-gradient {
    color: rgb(var(--accent));
  }

  .subtitle {
    font-size: 1.1rem;
    color: rgb(var(--text-secondary));
    margin: 0;
  }

  /* Email Section */
  .email-section {
    margin-bottom: 4rem;
  }

  .email-card {
    text-align: center;
    padding: 3rem 2rem;
    background: rgb(var(--card-bg));
    border: 1px solid rgb(var(--card-border));
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);
  }

  .email-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: rgb(var(--accent-light));
    border: 1px solid rgba(var(--accent), 0.2);
    border-radius: var(--radius-lg);
    color: rgb(var(--accent));
    margin-bottom: 1.5rem;
  }

  .email-card h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem;
    color: rgb(var(--text-primary));
  }

  .email-card > p {
    color: rgb(var(--text-secondary));
    margin: 0 0 1.5rem;
  }

  .email-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: rgb(var(--accent));
    border-radius: var(--radius-sm);
    color: white;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .email-button:hover {
    background: rgb(var(--accent-hover));
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(var(--accent), 0.3);
  }

  .response-time {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1.5rem;
    font-size: 0.85rem;
    color: rgb(var(--text-tertiary));
  }

  /* Help Section */
  .help-section {
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: rgb(var(--text-primary));
    margin: 0 0 1.5rem;
    text-align: center;
  }

  .section-description {
    text-align: center;
    color: rgb(var(--text-secondary));
    margin: 0 0 1.5rem;
  }

  .help-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .help-card {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.25rem;
    background: rgb(var(--card-bg));
    border: 1px solid rgb(var(--card-border));
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    box-shadow: var(--shadow-sm);
  }

  .help-card:hover {
    border-color: rgba(var(--accent), 0.3);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .help-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: rgb(var(--accent-light));
    border-radius: var(--radius-sm);
    color: rgb(var(--accent));
    flex-shrink: 0;
  }

  .help-content h3 {
    font-size: 0.95rem;
    font-weight: 600;
    color: rgb(var(--text-primary));
    margin: 0 0 0.25rem;
  }

  .help-content p {
    font-size: 0.85rem;
    color: rgb(var(--text-secondary));
    line-height: 1.5;
    margin: 0;
  }

  /* Links Section */
  .links-section {
    margin-bottom: 2rem;
  }

  .links-grid {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .link-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: rgb(var(--card-bg));
    border: 1px solid rgb(var(--card-border));
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all var(--transition-fast);
    box-shadow: var(--shadow-sm);
  }

  .link-card:hover {
    background: rgb(var(--accent-light));
    border-color: rgba(var(--accent), 0.3);
  }

  .link-card svg {
    color: rgb(var(--text-tertiary));
    transition: all var(--transition-fast);
  }

  .link-card:hover svg {
    color: rgb(var(--accent));
    transform: translateX(4px);
  }

  .link-card div {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
  }

  .link-label {
    font-size: 0.95rem;
    font-weight: 600;
    color: rgb(var(--text-primary));
  }

  .link-description {
    font-size: 0.8rem;
    color: rgb(var(--text-secondary));
  }

  @media (max-width: 768px) {
    .help-grid {
      grid-template-columns: 1fr;
    }

    .email-card {
      padding: 2rem 1.5rem;
    }

    .email-button {
      padding: 0.875rem 1.5rem;
      font-size: 1rem;
    }
  }
</style>
