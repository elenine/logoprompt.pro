  .products-grid :global(.ad-banner) {
    grid-column: 1 / -1;
    width: 100%;
    padding: 1rem 0;
  }

  .products-grid :global(.ad-content) {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

