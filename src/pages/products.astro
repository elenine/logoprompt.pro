---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import ModelFilter from '../components/ModelFilter.astro';
import GalleryTabs from '../components/GalleryTabs.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import RelatedGalleries from '../components/RelatedGalleries.astro';
import type { ProductFile, ProductGeneration } from '../types/product';
import type { LogoFile } from '../types/logo';
import type { NatureFile } from '../types/nature';
import type { PeopleFile } from '../types/people';

// Load all product files dynamically using Vite's glob import
const productFiles = import.meta.glob('../data/products/product-*.json', { eager: true });

// Load all logo files to calculate card count
const logoFiles = import.meta.glob('../data/logos/logo-*.json', { eager: true });

// Load all nature files to calculate card count
const natureFiles = import.meta.glob('../data/natures/nature-*.json', { eager: true });

// Load all people files to calculate card count
const peopleFiles = import.meta.glob('../data/peoples/people-*.json', { eager: true });

// Calculate logo card count (not prompt count)
let logoCardCount = 0;
for (const path in logoFiles) {
  const file = logoFiles[path] as { default: LogoFile };
  const logoFile = file.default;
  for (const logo of logoFile.logos) {
    logoCardCount += logo.outputs.length;
  }
}

// Calculate nature card count
let natureCardCount = 0;
for (const path in natureFiles) {
  const file = natureFiles[path] as { default: NatureFile };
  const natureFile = file.default;
  for (const nature of natureFile.natures) {
    natureCardCount += nature.outputs.length;
  }
}

// Calculate people card count
let peopleCardCount = 0;
for (const path in peopleFiles) {
  const file = peopleFiles[path] as { default: PeopleFile };
  const peopleFile = file.default;
  for (const people of peopleFile.peoples) {
    peopleCardCount += people.outputs.length;
  }
}

// Combine all products from all files
const allProducts: ProductGeneration[] = [];

for (const path in productFiles) {
  const file = productFiles[path] as { default: ProductFile };
  const productFile = file.default;

  // Flatten products into individual generation cards
  for (const product of productFile.products) {
    for (const output of product.outputs) {
      allProducts.push({
        id: output.id,
        prompt: product.prompt,
        model: output.model,
        imageUrl: output.imageUrl,
        generatedAt: output.generatedAt,
      });
    }
  }
}

// Sort by generation date (newest first)
const generations = allProducts.sort(
  (a, b) => new Date(b.generatedAt).getTime() - new Date(a.generatedAt).getTime()
);

// Get unique models for filter
const models = [...new Set(generations.map(g => g.model))].sort();

// Product card count = generations.length (flattened outputs)
const productCardCount = generations.length;
