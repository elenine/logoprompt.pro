  .products-grid :global(.product-card) {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.4s ease, transform 0.4s ease;
  }

  .products-grid :global(.product-card.fade-in) {
    opacity: 1;
    transform: translateY(0);
  }

