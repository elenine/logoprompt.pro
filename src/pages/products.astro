  }

  .tagline {
    font-size: 1rem;
    color: rgb(var(--text-secondary));
    max-width: 550px;
    margin: 0 auto 1.25rem;
    line-height: 1.6;
    animation: fadeInUp 0.6s ease-out 0.2s both;
