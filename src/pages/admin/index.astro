---
import Layout from '../../layouts/Layout.astro';

export const prerender = false;

// Admin check is done by middleware
const user = Astro.locals.user;
if (!user || !Astro.locals.isAdmin) {
  return Astro.redirect('/');
}
---

<Layout title="Admin Dashboard - LogoPrompt.pro" description="Admin dashboard">
  <main class="admin-page">
    <div class="admin-container">
      <header class="admin-header">
        <h1>Admin Dashboard</h1>
        <p class="welcome">Welcome, {user.name}</p>
      </header>

      <div class="stats-grid" id="stats-grid">
        <div class="stat-card loading">
          <div class="stat-icon users">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </div>
          <div class="stat-content">
            <span class="stat-value" id="total-users">-</span>
            <span class="stat-label">Total Users</span>
          </div>
        </div>

        <div class="stat-card loading">
          <div class="stat-icon affiliates">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <line x1="19" y1="8" x2="19" y2="14"></line>
              <line x1="22" y1="11" x2="16" y2="11"></line>
            </svg>
          </div>
          <div class="stat-content">
            <span class="stat-value" id="total-affiliates">-</span>
            <span class="stat-label">Affiliates</span>
          </div>
        </div>

        <div class="stat-card loading">
          <div class="stat-icon payouts">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="12" y1="1" x2="12" y2="23"></line>
              <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
            </svg>
          </div>
          <div class="stat-content">
            <span class="stat-value" id="pending-payouts">-</span>
            <span class="stat-label">Pending Payouts</span>
          </div>
        </div>

        <div class="stat-card loading">
          <div class="stat-icon links">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
              <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
            </svg>
          </div>
          <div class="stat-content">
            <span class="stat-value" id="total-links">-</span>
            <span class="stat-label">Referral Links</span>
          </div>
        </div>
      </div>

      <nav class="admin-nav">
        <a href="/admin/users" class="nav-card">
          <div class="nav-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </div>
          <h2>User Management</h2>
          <p>View all users, make affiliates, set referral codes</p>
        </a>

        <a href="/admin/payouts" class="nav-card">
          <div class="nav-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="12" y1="1" x2="12" y2="23"></line>
              <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
            </svg>
          </div>
          <h2>Payout Management</h2>
          <p>Process affiliate payout requests</p>
        </a>

        <a href="/admin/referral-links" class="nav-card">
          <div class="nav-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
              <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
            </svg>
          </div>
          <h2>Referral Links</h2>
          <p>Manage affiliate referral links and ad URLs</p>
        </a>
      </nav>

      <div class="admin-footer">
        <a href="/profile" class="back-link">Back to Profile</a>
      </div>
    </div>
  </main>
</Layout>

<script>
  async function loadStats() {
    try {
      // Fetch users count
      const usersRes = await fetch('/api/admin/users?limit=1');
      if (usersRes.ok) {
        const usersData = await usersRes.json();
        document.getElementById('total-users')!.textContent = usersData.pagination.total.toString();
      }

      // Fetch affiliates count
      const affiliatesRes = await fetch('/api/admin/users?filter=affiliates&limit=1');
      if (affiliatesRes.ok) {
        const affiliatesData = await affiliatesRes.json();
        document.getElementById('total-affiliates')!.textContent = affiliatesData.users.length.toString();
      }

      // Fetch pending payouts
      const payoutsRes = await fetch('/api/admin/payouts?status=pending&limit=1');
      if (payoutsRes.ok) {
        const payoutsData = await payoutsRes.json();
        document.getElementById('pending-payouts')!.textContent = payoutsData.counts.pending.toString();
      }

      // Fetch referral links
      const linksRes = await fetch('/api/admin/referral-links');
      if (linksRes.ok) {
        const linksData = await linksRes.json();
        document.getElementById('total-links')!.textContent = linksData.links.length.toString();
      }

      // Remove loading class
      document.querySelectorAll('.stat-card').forEach(card => {
        card.classList.remove('loading');
      });
    } catch (error) {
      console.error('Failed to load stats:', error);
    }
  }

  loadStats();
</script>

<style>
  .admin-page {
    min-height: calc(100vh - 200px);
    padding: 2rem 1rem;
  }

  .admin-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .admin-header {
    margin-bottom: 2rem;
  }

  .admin-header h1 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 0.5rem;
    color: rgb(var(--text-primary));
  }

  .welcome {
    color: rgb(var(--text-secondary));
    margin: 0;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .stat-card {
    background: rgb(var(--bg-primary));
    border: 1px solid rgb(var(--card-border));
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .stat-card.loading {
    opacity: 0.6;
  }

  .stat-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .stat-icon.users { background: rgba(59, 130, 246, 0.1); color: #3b82f6; }
  .stat-icon.affiliates { background: rgba(16, 185, 129, 0.1); color: #10b981; }
  .stat-icon.payouts { background: rgba(249, 115, 22, 0.1); color: #f97316; }
  .stat-icon.links { background: rgba(139, 92, 246, 0.1); color: #8b5cf6; }

  .stat-content {
    display: flex;
    flex-direction: column;
  }

  .stat-value {
    font-size: 1.75rem;
    font-weight: 700;
    color: rgb(var(--text-primary));
    line-height: 1;
  }

  .stat-label {
    font-size: 0.9rem;
    color: rgb(var(--text-secondary));
    margin-top: 0.25rem;
  }

  .admin-nav {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .nav-card {
    background: rgb(var(--bg-primary));
    border: 1px solid rgb(var(--card-border));
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .nav-card:hover {
    border-color: rgb(var(--accent));
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .nav-icon {
    width: 56px;
    height: 56px;
    background: rgba(var(--accent), 0.1);
    color: rgb(var(--accent));
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .nav-card h2 {
    font-size: 1.1rem;
    font-weight: 600;
    color: rgb(var(--text-primary));
    margin: 0 0 0.5rem;
  }

  .nav-card p {
    font-size: 0.9rem;
    color: rgb(var(--text-secondary));
    margin: 0;
  }

  .admin-footer {
    text-align: center;
  }

  .back-link {
    color: rgb(var(--accent));
    text-decoration: none;
  }

  .back-link:hover {
    text-decoration: underline;
  }
</style>
