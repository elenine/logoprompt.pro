---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import CreativeCard from '../components/CreativeCard.astro';
import ModelFilter from '../components/ModelFilter.astro';
import GalleryTabs from '../components/GalleryTabs.astro';
import type { CreativeFile, CreativeGeneration } from '../types/creative';
import type { LogoFile } from '../types/logo';
import type { ProductFile } from '../types/product';

// Load all creative files dynamically using Vite's glob import
const creativeFiles = import.meta.glob('../data/creatives/creative-*.json', { eager: true });

// Load all logo files to calculate card count
const logoFiles = import.meta.glob('../data/logos/logo-*.json', { eager: true });

// Load all product files to calculate card count
const productFiles = import.meta.glob('../data/products/product-*.json', { eager: true });

// Calculate logo card count (not prompt count)
let logoCardCount = 0;
for (const path in logoFiles) {
  const file = logoFiles[path] as { default: LogoFile };
  const logoFile = file.default;
  for (const logo of logoFile.logos) {
    logoCardCount += logo.outputs.length;
  }
}

// Calculate product card count
let productCardCount = 0;
for (const path in productFiles) {
  const file = productFiles[path] as { default: ProductFile };
  const productFile = file.default;
  for (const product of productFile.products) {
    productCardCount += product.outputs.length;
  }
}

// Combine all creatives from all files
const allCreatives: CreativeGeneration[] = [];

for (const path in creativeFiles) {
  const file = creativeFiles[path] as { default: CreativeFile };
  const creativeFile = file.default;

  // Flatten creatives into individual generation cards
  for (const creative of creativeFile.creatives) {
    for (const output of creative.outputs) {
      allCreatives.push({
        id: output.id,
        prompt: creative.prompt,
        model: output.model,
        imageUrl: output.imageUrl,
        generatedAt: output.generatedAt,
      });
    }
  }
}

// Sort by generation date (newest first)
const generations = allCreatives.sort(
  (a, b) => new Date(b.generatedAt).getTime() - new Date(a.generatedAt).getTime()
);

// Get unique models for filter
const models = [...new Set(generations.map(g => g.model))].sort();

// Creative card count = generations.length (flattened outputs)
const creativeCardCount = generations.length;
---

<Layout title="LogoPrompt Pro - AI Creative Generation Gallery">
  <main>
    <header class="hero">
      <div class="hero-glow"></div>
      <div class="hero-content">
        <div class="hero-badge">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>
          <span>Updated Weekly</span>
        </div>
        <h1>
          <span class="hero-title-line">Discover stunning</span>
          <span class="hero-title-gradient">AI creative prompts</span>
        </h1>
      </div>
    </header>

    <section class="how-to-use">
      <ol class="steps">
        <li class="step-item">
          <span class="step-num">1</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>
          <span><strong>Copy prompt</strong> from any creative</span>
        </li>
        <li class="step-item">
          <span class="step-num">2</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
          <span><strong>Open</strong> Ideogram or Gemini</span>
        </li>
        <li class="step-item">
          <span class="step-num">3</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></svg>
          <span><strong>Paste & generate</strong> your creative</span>
        </li>
      </ol>
    </section>

    <section class="pro-banner" id="pro-banner">
      <div class="pro-banner-content">
        <div class="ad-block-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="9" y1="9" x2="15" y2="15"></line>
            <line x1="15" y1="9" x2="9" y2="15"></line>
          </svg>
        </div>
        <span class="pro-banner-text">No Ads</span>
        <a href="/subscription" class="pro-banner-btn">
          <span>Go Pro</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    </section>

    <script>
      // Hide pro banner for subscribed users
      (async function() {
        try {
          const response = await fetch('/api/user/subscription-status');
          if (response.ok) {
            const data = await response.json();
            if (data.isSubscribed) {
              const banner = document.getElementById('pro-banner');
              if (banner) banner.style.display = 'none';
            }
          }
        } catch (e) {
          // Silently fail - show banner by default
        }
      })();
    </script>

    <GalleryTabs activeTab="creatives" logoCount={logoCardCount} productCount={productCardCount} creativeCount={creativeCardCount} />

    <section class="creatives-section">
      {generations.length > 0 ? (
        <>
          <ModelFilter models={models} gridSelector=".creatives-grid" cardSelector=".creative-card" />
          <div class="creatives-grid">
            {generations.map((generation) => (
              <CreativeCard generation={generation} />
            ))}
          </div>

          <!-- Loading indicator for infinite scroll -->
          <div class="loading-indicator" style="display: none;">
            <div class="spinner"></div>
            <span>Loading more...</span>
          </div>

          <!-- Scroll sentinel for intersection observer -->
          <div class="scroll-sentinel"></div>
        </>
      ) : (
        <div class="empty-state">
          <div class="empty-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
          </div>
          <h2>No Creatives Yet</h2>
          <p>Creatives will appear here once they are generated and processed.</p>
          <a href="/" class="back-to-logos">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
            Browse Logos Instead
          </a>
        </div>
      )}
    </section>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 0 1rem 2rem;
    max-width: 1400px;
  }

  /* Hero Section */
  .hero {
    position: relative;
    text-align: center;
    padding: 2rem 0 2.5rem;
    overflow: hidden;
  }

  .hero-glow {
    display: none;
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.875rem;
    background: rgb(var(--accent-light));
    border: 1px solid rgba(var(--accent), 0.2);
    border-radius: var(--radius-full);
    color: rgb(var(--accent-dark));
    font-size: 0.75rem;
    font-weight: 500;
    margin-bottom: 1rem;
    animation: fadeInUp 0.6s ease-out;
  }

  .hero-badge svg {
    color: rgb(var(--accent));
  }

  h1 {
    font-size: clamp(2rem, 6vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 1rem 0;
    letter-spacing: -0.03em;
    animation: fadeInUp 0.6s ease-out 0.1s both;
  }

  .hero-title-line {
    display: block;
    color: rgb(var(--text-primary));
  }

  .hero-title-gradient {
    display: block;
    color: rgb(var(--accent));
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* How to Use Section */
  .how-to-use {
    max-width: 700px;
    margin: 0 auto 2rem;
    padding: 0.875rem 1.25rem;
    background: rgb(var(--bg-primary));
    border: 1px solid rgb(var(--card-border));
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    animation: fadeInUp 0.6s ease-out 0.4s both;
  }

  .steps {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
  }

  .step-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: rgb(var(--text-secondary));
  }

  .step-item svg {
    color: rgb(var(--accent));
    flex-shrink: 0;
  }

  .step-item strong {
    color: rgb(var(--text-primary));
    font-weight: 600;
  }

  .step-num {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    background: rgb(var(--accent-light));
    border-radius: var(--radius-full);
    font-size: 0.7rem;
    font-weight: 700;
    color: rgb(var(--accent-dark));
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .steps {
      flex-direction: column;
      gap: 0.5rem;
      align-items: flex-start;
    }

    .hero {
      padding: 1.5rem 0 2rem;
    }
  }

  /* Pro Banner - Minimalistic */
  .pro-banner {
    max-width: 500px;
    margin: 0 auto 2rem;
    animation: fadeInUp 0.6s ease-out 0.5s both;
  }

  .pro-banner-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 0.875rem 1.25rem;
    background: rgb(var(--bg-primary));
    border: 1px solid rgb(var(--card-border));
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
  }

  .ad-block-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: rgba(220, 38, 38, 0.08);
    border-radius: var(--radius-md);
    color: rgb(var(--accent));
    flex-shrink: 0;
  }

  .pro-banner-text {
    font-size: 0.95rem;
    font-weight: 600;
    color: rgb(var(--text-primary));
    flex: 1;
  }

  .pro-banner-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 1rem;
    background: rgb(var(--accent));
    color: white;
    border-radius: var(--radius-md);
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-fast);
    flex-shrink: 0;
  }

  .pro-banner-btn:hover {
    background: rgb(var(--accent-hover));
    transform: translateY(-1px);
  }

  .pro-banner-btn:active {
    transform: translateY(0);
  }

  @media (max-width: 600px) {
    .pro-banner-content {
      gap: 0.75rem;
      padding: 0.75rem 1rem;
    }

    .ad-block-icon {
      width: 32px;
      height: 32px;
    }

    .ad-block-icon svg {
      width: 16px;
      height: 16px;
    }

    .pro-banner-text {
      font-size: 0.875rem;
    }

    .pro-banner-btn {
      padding: 0.5rem 0.875rem;
      font-size: 0.8125rem;
    }

    .pro-banner-btn svg {
      width: 12px;
      height: 12px;
    }
  }

  /* Creatives Section */
  .creatives-section {
    padding-top: 1rem;
  }

  .creatives-grid {
    --grid-columns: 6;
    display: grid;
    grid-template-columns: repeat(var(--grid-columns), 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 1200px) {
    .creatives-grid {
      grid-template-columns: repeat(min(var(--grid-columns), 3), 1fr);
    }
  }

  @media (max-width: 900px) {
    .creatives-grid {
      grid-template-columns: repeat(min(var(--grid-columns), 2), 1fr);
    }
  }

  /* Animation for cards loading in */
  .creatives-grid :global(.creative-card) {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.4s ease, transform 0.4s ease;
  }

  .creatives-grid :global(.creative-card.fade-in) {
    opacity: 1;
    transform: translateY(0);
  }

  /* Ad banner styles (for dynamically inserted ads) */
  .creatives-grid :global(.ad-banner) {
    grid-column: 1 / -1;
    width: 100%;
    padding: 1rem 0;
  }

  .creatives-grid :global(.ad-content) {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .creatives-grid :global(.ad-label) {
    font-size: 0.6rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgb(var(--text-tertiary));
    margin-bottom: 0.25rem;
  }

  .creatives-grid :global(.ad-container) {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 90px;
    width: 100%;
    max-width: 728px;
  }

  .creatives-grid :global(.ad-container iframe) {
    max-width: 100%;
  }

  /* Loading indicator */
  .loading-indicator {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 2rem;
    color: rgb(var(--text-tertiary));
  }

  .spinner {
    width: 24px;
    height: 24px;
    border: 3px solid rgb(var(--accent-light));
    border-top-color: rgb(var(--accent));
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  /* Scroll sentinel - invisible element at bottom */
  .scroll-sentinel {
    height: 1px;
    margin-top: 2rem;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: rgb(var(--bg-primary));
    border: 1px solid rgb(var(--card-border));
    border-radius: var(--radius-lg);
    animation: fadeInUp 0.6s ease-out;
  }

  .empty-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: rgb(var(--accent-light));
    border-radius: var(--radius-full);
    margin-bottom: 1.5rem;
    color: rgb(var(--accent));
  }

  .empty-state h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: rgb(var(--text-primary));
    margin: 0 0 0.5rem 0;
  }

  .empty-state p {
    font-size: 1rem;
    color: rgb(var(--text-secondary));
    margin: 0 0 1.5rem 0;
  }

  .back-to-logos {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: rgb(var(--accent));
    color: white;
    border-radius: var(--radius-md);
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .back-to-logos:hover {
    background: rgb(var(--accent-hover));
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .creatives-grid :global(.ad-container) {
      overflow-x: auto;
    }
  }

  @media (max-width: 500px) {
    .creatives-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
